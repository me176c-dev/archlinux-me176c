# Maintainer: lambdadroid <lambdadroid@gmail.com>
pkgname=me176c-bootstrap
pkgver=0.3.0
pkgrel=1
pkgdesc="me176c-boot bootstrap loader"
arch=(x86_64)
url="https://github.com/me176c-dev/me176c-boot/tree/master/bootstrap"
license=('BSD')
makedepends=(meson gnu-efi-libs)
source=("https://github.com/me176c-dev/me176c-boot/archive/$pkgver.tar.gz")
sha256sums=('97dd9390b44eb5389996c912770baef077c5b378271385a3088c93fe711619c5')

build() {
    meson "me176c-boot-$pkgver/bootstrap" build
    ninja -C build
}

package() {
    install -Dm644 build/bootstrap.efi "$pkgdir"/opt/me176c/bootstrap.efi
}
