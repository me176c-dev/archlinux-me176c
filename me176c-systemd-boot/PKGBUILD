# Maintainer: lambdadroid <lambdadroid@gmail.com>
pkgname=me176c-systemd-boot
pkgver=238.0
pkgrel=1
pkgdesc="Simple UEFI boot manager for the ASUS MeMO Pad 7 (ME176C/X) (fork of systemd-boot)"
arch=(x86_64)
url="https://github.com/me176c-dev/systemd-boot-me176"
license=('LGPL2.1')
makedepends=('meson' 'gnu-efi-libs')
source=("$url/archive/$pkgver.tar.gz")
sha256sums=('cc015808e33da4b8a9f723e0215180bf60533175c38a0349837a450fe2dda5b2')

build() {
    meson "systemd-boot-me176c-$pkgver" build
    ninja -C build
}

package() {
    install -Dm644 build/systemd-bootx64.efi "$pkgdir/boot/EFI/BOOT/bootx64.efi"
}
